<!-- SCRIPT PARA MOSTRAR LA IMAGEN SEGÚN BOTÓN -->
<script>
  function mostrarZona(zona) {
    const contenedor = document.getElementById('imagenZona');
    let imagen = '';
    let alt = '';

    if (zona === 'mancuernas') {
      imagen = 'https://www.fitfigueres.com/FitxersWeb/155232/foto-1-musculacio%CC%81.jpg';
      alt = 'Zona de mancuernas';
    } else if (zona === 'cardio') {
      imagen = 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT-UNq7lnvXHy0GnkV6Wt5lcO3OZrFn-cl4rA&s';
      alt = 'Zona de cardio';
    } else if (zona === 'funcional') {
      imagen = 'https://youcanfit.es/wp-content/uploads/2021/06/galeria-instalaciones8.jpg';
      alt = 'Zona funcional';
    }

    contenedor.innerHTML = `<img src="${imagen}" alt="${alt}"><p>${alt}</p>`;
  }
</script>


